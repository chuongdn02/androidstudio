<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal">

<RelativeLayout
    android:background="@drawable/blue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:src="@drawable/gtvt"
        android:layout_marginTop="10dp"
        android:id="@+id/pic"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_Name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic"
        android:layout_centerInParent="true"
        android:layout_marginVertical="10dp"
        android:gravity="center_horizontal"
        android:text="name"
        android:textAlignment="center"
        android:textSize="30dp" />
</RelativeLayout>


    <TextView

        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRA CỨU VI PHẠM GIAO THÔNG!"
        android:textSize="24dp"
        android:layout_marginTop="10dp"

        android:textStyle="bold"
        android:textColor="@color/red"

        />
    <RelativeLayout
        android:background="@drawable/boder"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biển kiểm soát"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>
        <EditText
            android:layout_below="@+id/text"
            android:id="@+id/et_Bienso"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:layout_centerHorizontal="true"
            android:hint="VD: 30A12345"
            android:textSize="25dp"
            android:textAlignment="center"
            android:background="@drawable/boder"
            android:gravity="center_horizontal"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/boder"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại phương tiện"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>
        <Spinner
            android:layout_below="@+id/text2"
            android:id="@+id/vehicle_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="120dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/boder"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã xác thực"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_below="@+id/mxt"
            android:textColor="#E10707"

            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"
            android:gravity="center_horizontal"
            android:text="xxxxx"
            android:textSize="22dp"

            android:background="@drawable/boder"
            />
        <EditText
            android:layout_below="@id/textView"
            android:id="@+id/et_maXacNhan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginVertical="10dp"
            android:textAlignment="center"
            android:background="@drawable/boder"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>


    <Button

    android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tra cứu" />

</LinearLayout>
