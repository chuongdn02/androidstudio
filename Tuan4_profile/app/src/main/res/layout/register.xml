<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/purple_200"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/banner"
            android:background="@drawable/img" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvtxt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:text="Welcome to LOREM IPSUM"
                android:textAlignment="center"
                android:textSize="23dp"
                android:textColor="#FF5722"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/intro"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/tvtxt"
                android:text="unleash your creativity"
                android:textAlignment="center"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/user"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/intro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:hint="Username" />

            <EditText
                android:id="@+id/passw"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:password="true"/>

            <EditText
                android:id="@+id/cf"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/passw"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:hint="Confirm"
                android:password="true"/>
            <Button
                android:id="@+id/btnregister"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cf"
                android:layout_marginTop="30dp"
                android:text="Register"/>

            <TextView
                android:id="@+id/haveacc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/btnregister"
                android:layout_marginTop="20dp"
                android:text="Do you have an account ?"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/haveacc"
                android:layout_marginTop="100dp"
                android:text="@string/name"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"/>



        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

